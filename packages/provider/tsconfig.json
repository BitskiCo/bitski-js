{
  "compilerOptions": {
    "outDir": "dist",
    "noImplicitAny": false,
    "strict": true,
    "moduleResolution": "node",
    "lib": ["es2017", "dom"],
    "target": "ES2017",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "paths": {
      "*": ["*", "types/*"]
    },
    "typeRoots": [
      "./node_modules/@types", "./types"
    ]
  },
  "include": ["src", "types"]
}
