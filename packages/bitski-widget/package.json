{
  "name": "@bitski/bitski-widget",
  "version": "0.0.0",
  "type": "module",
  "main": "dist/bitski-widget.umd.js",
  "module": "dist/bitski-widget.es.js",
  "types": "dist/bitski-widget.d.ts",
  "exports": {
    ".": {
      "import": "./dist/bitski-widget.es.js",
      "require": "./dist/bitski-widget.umd.js",
      "types": "./dist/bitski-widget.d.ts"
    },
    "./dist/style.css": "./dist/style.css"
  },
  "files": [
    "/dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "format": "prettier --config ../../.prettierrc '{src,tests}/**/*.ts' --write",
    "prepare": "npm run build",
    "preview": "vite preview"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "bitski": "3.x",
    "react": "^18",
    "react-dom": "^18",
    "viem": "2.x",
    "wagmi": "2.x"
  },
  "dependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "bitski": "3.x",
    "react": "^18",
    "react-dom": "^18",
    "viem": "2.x",
    "vite-plugin-lib-inject-css": "^1.3.0",
    "wagmi": "2.x"
  },
  "devDependencies": {
    "@babel/core": "^7.6.4",
    "@babel/plugin-transform-runtime": "^7.6.2",
    "@babel/preset-env": "^7.6.3",
    "@types/node": "^20.11.5",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "autoprefixer": "^10.0.1",
    "babelify": "^10.0.0",
    "eslint": "^8.55.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "postcss": "^8",
    "tailwindcss": "^3.3.0",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vite-plugin-dts": "^1.7.1"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env",
            "@babel/preset-react",
            {
              "runtime": "automatic"
            }
          ],
          "plugins": [
            "@babel/plugin-transform-runtime"
          ]
        }
      ]
    ]
  }
}
