{
  "compilerOptions": {
    "rootDir": "src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "module": "ESNext",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "target": "ESNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "declaration": true,
    "jsx": "react-jsx",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
