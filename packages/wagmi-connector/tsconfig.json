{
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "lib": ["ESNext"],
    "target": "ES2020",
    "esModuleInterop": true,
    "isolatedModules": true,
    "preserveSymlinks": true,
    "declaration": true,
    "declarationDir": "lib",
    "jsx": "preserve",
    "skipLibCheck": true,
    "strict": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
