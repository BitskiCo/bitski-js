{
  "name": "@bitski/wagmi-connector",
  "version": "0.1.0",
  "description": "Wagmi adapter for Bitski",
  "main": "lib/index.js",
  "module": "dist/index.js",
  "types": "lib/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/BitskiCo/bitski-js"
  },
  "scripts": {
