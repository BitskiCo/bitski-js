    "@types/jest": "^27.5.2",
    "babelify": "^10.0.0",
    "jest": "27.2.0",
    "jest-fetch-mock": "^3.0.3",
    "ts-jest": "^27.0.5"
  },
  "browserify": {
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "@babel/preset-env"
